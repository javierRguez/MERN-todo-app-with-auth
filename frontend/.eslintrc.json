{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "plugin:react/recommended",
        "airbnb",
        "plugin:prettier/recommended"
    ],
    "parserOptions": {
        "ecmaFeatures": {
            "jsx": true
        },
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "react/jsx-filename-extension": [1, { "extensions": [".js",".jsx"] }],
        "prettier/prettier": [
          "error",
          {
            "printWidth": 80,
            "trailingComma": "es5",
            "semi": false,
            "singleQuote": true,
            "useTabs": false,
            "endOfLine": "auto"
          }
        ]
      }
}
